<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Dialog Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Letter Occurrence"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="16dp" />

    <!-- Cost Warning -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cost: 5 points"
        android:textSize="14sp"
        android:textColor="?attr/colorError"
        android:layout_marginBottom="16dp" />

    <!-- Letter Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/letterInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a letter (A-Z)"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_marginBottom="16dp"
        app:counterEnabled="true"
        app:counterMaxLength="1"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/letterInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:maxLength="1"
            android:textSize="24sp"
            android:gravity="center"
            android:textAllCaps="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Alphabet Buttons Grid -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or tap a letter:"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <!-- First Row: A-G -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/btnA"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="A"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnB"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="B"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnC"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="C"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnD"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="D"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnE"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="E"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnF"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="F"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnG"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="G"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Second Row: H-N -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/btnH"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="H"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnI"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="I"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnJ"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="J"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnK"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="K"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnL"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="L"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnM"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="M"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnN"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="N"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Third Row: O-U -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/btnO"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="O"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnP"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="P"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnQ"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="Q"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnR"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="R"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnS"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="S"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnT"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="T"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnU"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="U"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Fourth Row: V-Z -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnV"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="V"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnW"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="W"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnX"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="X"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnY"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="Y"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnZ"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="Z"
            android:textSize="12sp" />

        <!-- Empty spaces to balance layout -->
        <View
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="2dp" />

    </LinearLayout>

    <!-- Dialog Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancel"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnCheck"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Letter (5 pts)" />

    </LinearLayout>

</LinearLayout>