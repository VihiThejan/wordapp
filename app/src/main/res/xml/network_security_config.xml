<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic to Dreamlo API (HTTP) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">dreamlo.com</domain>
    </domain-config>
    
    <!-- Allow cleartext traffic to API Ninjas (if needed for development) -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.api-ninjas.com</domain>
    </domain-config>
    
    <!-- Default configuration for other domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust preinstalled CAs -->
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>